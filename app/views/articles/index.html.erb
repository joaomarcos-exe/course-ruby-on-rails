<h1>Index</h1>

<table>
    <thead>
        <tr>
            <th>Title</th> <th>Description</th> <th colspan="3" >Actions<th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |item| %>
            <tr>
                <td><%= item.title%></td>
                <td><%= item.description%></td>
                <td><%= link_to 'Show', article_path(item)%> </td>
                <td><%= link_to 'Edit', edit_article_path(item)%></td>
                <td><%= link_to 'Delete', article_path(item), data: {
                    turbo_method: :delete
                } %></td>
            </tr>
        <% end %>
    </tbody>
</table>
<p>
    <%= link_to 'Create new article', new_article_path %>
</p>